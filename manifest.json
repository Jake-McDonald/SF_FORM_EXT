{
  "name": "SF_FORM_EXT",
  "version": "0.2",
  "description": "Build an Extension!",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["/form_field_config/salesforceFormFields.js", 
        "/form_field_config/trackerFields.js", "/background/background.js"],
    "persistent": false
  },
  
  "page_action": {
    "default_popup": "/popup/popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["/content_scripts/setTemplate.js"],
      "all_frames": true
    },
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["/content_scripts/getInputFields.js"],
      "all_frames": true
    }
    ],
  
  
  "manifest_version": 2
}
